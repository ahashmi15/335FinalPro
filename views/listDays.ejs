<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/style.css">
    <title>Your Days</title>
</head>

<body class="days-page">

    <div class="days-shell">

        <h1 class="days-title">Your Days</h1>
        <hr class="days-divider">

        <% if (dates.length === 0) { %>
            <p class="days-empty">No scheduled days yet. Add a task to begin.</p>
        <% } else { %>

            <div class="carousel days-carousel">
                <% dates.forEach(date => { %>
                    <a href="/tasks/<%= date %>" class="day-link">
                        <div class="day-card glowing-border">
                            <span class="day-text"><%= date %></span>
                        </div>
                    </a>
                <% }); %>
            </div>

        <% } %>

        <div class="days-bottom">
            <a class="days-add-btn" href="/">‚Üê Add Another Task</a>
        </div>

    </div>

</body>
</html>
